@import "./tailwind.pcss";
@import "./fonts.pcss";
@import "./code.pcss";
@import "./custom-blocks.pcss";
@import "./typography.pcss";

body {
  @apply text-slate;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
}

body {
  font-family: "GT Eesti", "Futura Std", "Futura", "Helvetica", sans-serif;
  font-weight: 400;
}

a {
  @apply text-blue no-underline;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 500;
}
