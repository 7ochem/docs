{
  "filters": {
    "comments": true
  },
  "rules": {
    "apostrophe": true,
    "no-todo": true,
    "terminology": {
      "defaultTerms": true,
      "skip": ["Image", "Code"],
      "terms": [
        "Plugin Store",
        "Craft ID",
        ["(\\s)pdf", "PDF"],
        ["(\\s)png", "PNG"],
        ["(\\s)jpg", "JPG"],
        ["(\\s)gif", "GIF"],
        ["(\\s)html", "HTML"],
        ["(\\s)css", "CSS"]
      ],
      "exclude": [
        "front[- ]end(\\w*)",
        "back[- ]end(\\w*)",
        "command ?line",
        "PDF",
        "PNG",
        "JPG",
        "GIF",
        "HTML",
        "CSS"
      ]
    }
  }
}